<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterMTGActivity"
    >


    <ImageView
        android:id="@+id/imageViewPl1"
        android:rotation="180"
        android:layout_width="408dp"
        android:layout_height="358dp"
        android:background="@drawable/pl1"
        android:contentDescription="Immagine del giocatore 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPl2"
        android:layout_width="411dp"
        android:layout_height="374dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/pl2"
        android:contentDescription="Immagine del giocatore 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/life_pl1"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:freezesText="false"
        android:gravity="center"
        android:rotation="180"
        android:text="@string/_20"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#66000000"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/optPl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.80"
        android:clickable="true"
        android:color="#66FF0000"
        android:focusable="true"
        android:hapticFeedbackEnabled="false"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257"
        app:srcCompat="@drawable/menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plusPl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.85"
        android:clickable="true"
        android:focusable="true"
        android:onClick="changeUpLP1"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/life_pl1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/minusPl1"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:alpha="0.85"
        android:clickable="true"
        android:focusable="true"
        android:onClick="changeDownLP1"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPl1"
        app:layout_constraintEnd_toStartOf="@+id/life_pl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dash" />


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:rotation="180"
        android:shadowColor="#BE000000"

        android:shadowDx="6"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:text="@string/player_2"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/life_pl1" />

    <TextView
        android:id="@+id/life_pl2"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:freezesText="false"
        android:gravity="center"
        android:text="@string/_20"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#66000000"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPl1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/minusPl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.85"
        android:clickable="true"
        android:focusable="true"
        android:onClick="changeDownLP2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/life_pl2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPl1"
        app:srcCompat="@drawable/dash" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plusPl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.85"
        android:focusable="true"
        android:onClick="changeUpLP2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/life_pl2"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPl1"
        app:srcCompat="@drawable/plus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/optPl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.80"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:color="#66FF0000"
        android:focusable="true"

        android:hapticFeedbackEnabled="false"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPl2"
        app:layout_constraintVertical_bias="0.742"
        app:srcCompat="@drawable/menu" />

    <EditText
        android:id="@+id/editNamePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:shadowColor="#BE000000"
        android:shadowDx="6"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:text="@string/player_1"
        app:layout_constraintBottom_toTopOf="@+id/life_pl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPl1" />

</androidx.constraintlayout.widget.ConstraintLayout>
